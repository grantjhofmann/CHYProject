@model IEnumerable<CHY_Project.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3> Displaying @ViewBag.ArtistsCount of @ViewBag.TotalArtistsCount Results</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ContentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ContentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContentID })
        </td>
    </tr>
}

</table>
