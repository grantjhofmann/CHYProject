@using CHY_Project.Controllers
@model CHY_Project.Models.Artist

@{
    ViewBag.Title = "Artist Search";
}

<h2>Artist Search</h2>

@using (Html.BeginForm("SearchResults", "Artists", FormMethod.Get))
{
    <p class="form-group">
        Artist Name @Html.TextBox("NameSearchString", null, new { @class = "form-control" }) <br />

        <div class="form-control">
            @Html.LabelFor(model => model.Genres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("SelectedGenres", (MultiSelectList)ViewBag.AllGenres, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            Sort By
            <div class="form-check">
                @Html.RadioButton("SelectedSort", ArtistsController.ArtistSort.Name, true, new { @class = "form-check-input" }) Name
            </div>
            <div class="form-check">
                @Html.RadioButton("SelectedSort", ArtistsController.ArtistSort.Rating, new { @class = "form-check-input" }) Rating
            </div>
        </div>

        <div class="form-group">
            Order
            <div class="form-check">
                @Html.RadioButton("SelectedSortOrder", SongsController.SortOrder.Ascending, true, new { @class = "form-check-input" }) Ascending
            </div>
            <div class="form-check">
                @Html.RadioButton("SelectedSortOrder", SongsController.SortOrder.Descending, new { @class = "form-check-input" }) Descending
            </div>
        </div>

        <input type="submit" value="Search" class="btn btn-default" />
        @Html.ActionLink("Show All", "Index", null, new { @class = "btn btn-default" })
    </p>
}