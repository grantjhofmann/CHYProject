@model IEnumerable<CHY_Project.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3> Displaying @ViewBag.AlbumCount of @ViewBag.TotalAlbumCount Results</h3>

<p>
@Html.ActionLink("Search Albums", "Search", null, new { @class = "btn btn-default" })
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artists.First().ArtistName)
        </th>
        <th>
            Price
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>


            @*@foreach (var artist in item.Artists)
            {
                <td>
                    @Html.DisplayFor(modelItem => artist.ArtistName)
                </td>

            }*@

            @*NOTE: I changed this to the below so that it didn't mess up formatting by having a list of artists in one field. We can change it back if need be.*@

            <td>
                @Html.DisplayFor(modelItem => item.Artists.First().ArtistName)
            </td>

            <td>
                $@Html.DisplayFor(modelItem => item.DiscountPrice)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ContentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ContentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ContentID }) |
                @Html.ActionLink("Add to Cart", "AddtoCart", "Carts", new { id = item.ContentID }, null)
            </td>
        </tr>
    }

</table>