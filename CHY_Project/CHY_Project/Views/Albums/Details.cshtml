@model CHY_Project.Models.Album

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Album @Html.DisplayFor(model => model.AlbumName)</h4>
    <hr />

    <img alt="@Model.AlbumName"
         src="@Model.AlbumArt" />
    <table class="table table-bordered">
        <tr>
            <th>
                Artists
            </th>
        </tr>

        @foreach (var artist in Model.Artists)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => artist.ArtistName)
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Add to Cart", "AddtoCart", "Carts", new { id = Model.ContentID }, null)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AlbumName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RegularPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegularPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiscountPrice)
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.DiscountPrice)
        </dd>


    </dl>
    <table class="table table-bordered">
        <tr>
            <th>
                Songs
            </th>
        </tr>
        @foreach (var song in Model.Songs)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => song.SongName)
                </td>
            </tr>
        }
    </table>
    <table class="table table-bordered">
        <tr>
            <th>
                Genres
            </th>
        </tr>
        @foreach (var genre in Model.Genres)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => genre.GenreName)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ContentID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
